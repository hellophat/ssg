<script lang="ts">
	import { base } from '$app/paths';
	import { onMount } from 'svelte';
	
	let profile: any = $state(null);
	let summary: any = $state(null);
	let recentGames: any[] = $state([]);
	let loading = $state(true);
	let error = $state('');
	
	onMount(async () => {
		try {
			// Fetch profile data
			const profileRes = await fetch(`${base}/api/profile.json`);
			if (profileRes.ok) {
				profile = await profileRes.json();
			}
			
			// Fetch summary
			const summaryRes = await fetch(`${base}/api/summary.json`);
			if (summaryRes.ok) {
				summary = await summaryRes.json();
			}
			
			// Fetch recent games
			const recentRes = await fetch(`${base}/history/stats/recent-latest.json`);
			if (recentRes.ok) {
				const recentData = await recentRes.json();
				recentGames = recentData.games || [];
			}
			
			loading = false;
		} catch (err) {
			error = 'Failed to load profile data. Please ensure initial sync has been run.';
			loading = false;
		}
	});
	
	function formatDate(timestamp: string) {
		return new Date(timestamp).toLocaleString();
	}
	
	function formatPlaytime(minutes: number) {
		const hours = Math.round(minutes / 60);
		if (hours < 1) return `${minutes}m`;
		return `${hours}h`;
	}
</script>

<div class="profile-container">
	{#if loading}
		<div class="loading">
			<p>Loading profile...</p>
		</div>
	{:else if error}
		<div class="error card">
			<h2>⚠️ Setup Required</h2>
			<p>{error}</p>
			<p>Please follow the setup instructions in README.md:</p>
			<ol>
				<li>Add your Steam API Key to GitHub Secrets</li>
				<li>Configure your Steam ID in .steamrc.yml</li>
				<li>Run the "Initial Steam Data Sync" workflow</li>
			</ol>
		</div>
	{:else if profile}
		<!-- Profile Header with Banner Style -->
		<div class="profile-banner">
			<div class="profile-header-content">
				<div class="profile-avatar-section">
					<div class="avatar-frame">
						<img src={profile.avatarfull} alt={profile.personaname} />
					</div>
					<div class="profile-identity">
						<h1 class="profile-name">{profile.personaname}</h1>
						<div class="profile-meta">
							<span class="steam-id">{profile.steamid}</span>
							<a href={profile.profileurl} target="_blank" class="steam-link">
								View Steam Profile →
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Level and Stats Bar -->
		{#if summary}
			<div class="stats-showcase">
				<div class="stat-box">
					<div class="stat-label">Level</div>
					<div class="stat-value">--</div>
				</div>
				<div class="stat-divider"></div>
				<div class="stat-box">
					<div class="stat-label">Games</div>
					<div class="stat-value">{summary.stats.totalGames}</div>
				</div>
				<div class="stat-divider"></div>
				<div class="stat-box">
					<div class="stat-label">Hours Played</div>
					<div class="stat-value">{summary.stats.totalPlaytime.toLocaleString()}</div>
				</div>
				<div class="stat-divider"></div>
				<div class="stat-box">
					<div class="stat-label">Achievements</div>
					<div class="stat-value">{summary.stats.gamesWithAchievements}</div>
				</div>
			</div>
		{/if}

		<!-- Recently Played Section -->
		{#if recentGames.length > 0}
			<div class="content-section">
				<div class="section-header">
					<h2>Recently Played</h2>
					<a href="{base}/games/1/" class="see-all">See all games →</a>
				</div>
				<div class="recent-games-grid">
					{#each recentGames.slice(0, 6) as game}
						<a href="{base}/game/{game.appid}/" class="recent-game-card">
							<div class="game-cover-large">
								<img 
									src="{base}/covers/{game.appid}.jpg" 
									alt={game.name}
									onerror={(e) => e.currentTarget.style.display = 'none'}
								/>
							</div>
							<div class="game-details">
								<h3 class="game-title">{game.name}</h3>
								<div class="game-playtime">
									<div class="playtime-row">
										<span class="label">Recent:</span>
										<span class="value">{formatPlaytime(game.playtime_2weeks || 0)}</span>
									</div>
									<div class="playtime-row">
										<span class="label">Total:</span>
										<span class="value">{formatPlaytime(game.playtime_forever || 0)}</span>
									</div>
								</div>
							</div>
						</a>
					{/each}
				</div>
			</div>
		{/if}
		
		{#if summary}
			<div class="footer-info">
				<span>Last updated: {formatDate(summary.lastUpdate)}</span>
			</div>
		{/if}
	{/if}
</div>

